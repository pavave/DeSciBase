{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DeSciBase Publication Metadata",
  "type": "object",
  "required": ["title", "authors", "created", "cid"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Title of the scientific article"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of author names"
    },
    "doi": {
      "type": "string",
      "description": "DOI identifier"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of publication"
    },
    "cid": {
      "type": "string",
      "description": "IPFS CID of the article PDF"
    }
  }
}
